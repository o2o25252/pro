<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">

	<!--네이버 회원정보 저장 -->
	<insert id="n_add" parameterType="com.data.vo.UserVO">
		insert into user_t(id,name,nickname,naver) 
		values (#{id}, #{name}, #{nickname},0)
		
	</insert>
	<!-- 홈페이지 회원정보 저장 -->
	<insert id="h_add" parameterType="com.data.vo.UserVO">
		insert into user_t(id,pw,name,nickname,naver) 
		values(#{id}, #{pw}, #{name}, #{nickname},1)
	</insert>
	
	<!-- id 로 회원정보 찾기 
	 찾아진다면 값이 이미 존재 하므로  dao 에서 false 전달 
	 없다면 true 전달  -->
	<select id="search_id" parameterType="String" resultType="int">
		select count(*) from user_t 
		where id=#{id}
	</select>
	
	
</mapper>